const state = {
  days: [true, true, false, false, false, false, false]
};

const getters = {
  getDayStatus: state => {
    return state.days;
  }
};

const mutations = {
  setDayStatus: (state, payload) => {
    state.days = payload;
  }
};

const actions = {
  setDayStatus: async (context, payload) => {
    context.commit("set_day_status", payload);
  }
};

export default {
  state,
  getters,
  mutations,
  actions
};